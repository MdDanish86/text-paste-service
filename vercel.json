{
  "projects": [
    {
      "name": "text-paste",
      "rootDirectory": "frontend"
    }
  ],
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } },
    { "src": "backend/api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/api/$1.js" },
    { "src": "/p/(.*)", "dest": "backend/api/pasteHtml.js" }
  ]
}
